@page "{id:int}"
@attribute [Authorize(Roles = "Designer")]
@using Microsoft.AspNetCore.Authorization
@model WebDesignerSystem.Pages.Admin.Categories.DeleteModel

@{
    ViewData["Title"] = "Удалить категорию";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    @if (Model.ProductCount > 0)
                    {
                        <div class="alert alert-danger">
                            <h5><i class="bi bi-exclamation-triangle-fill"></i> Внимание!</h5>
                            <p>В этой категории находится <strong>@Model.ProductCount</strong> товар(ов).</p>
                            <p class="mb-0"><strong>Удаление невозможно!</strong> Сначала удалите или переместите товары в другую категорию.</p>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Назад
                            </a>
                            <a asp-page="/Admin/Products/Index" asp-route-categoryId="@Model.Category.Id" class="btn btn-primary">
                                <i class="bi bi-box"></i> Перейти к товарам
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <h5><i class="bi bi-exclamation-triangle"></i> Внимание!</h5>
                            <p>Вы собираетесь удалить эту категорию. Это действие нельзя отменить.</p>
                        </div>

                        <div class="mb-4">
                            <h5>Информация о категории:</h5>
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <strong>Название:</strong> @Model.Category.Name
                                </li>
                                <li class="list-group-item">
                                    <strong>Описание:</strong> 
                                    @if (!string.IsNullOrEmpty(Model.Category.Description))
                                    {
                                        <span>@Model.Category.Description</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Нет описания</span>
                                    }
                                </li>
                            </ul>
                        </div>

                        <form method="post">
                            <div class="d-flex justify-content-between">
                                <a asp-page="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Отмена
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Удалить
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>