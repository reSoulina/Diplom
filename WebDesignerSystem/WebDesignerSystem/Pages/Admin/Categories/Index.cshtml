@page
@attribute [Authorize(Roles = "Designer")]
@using Microsoft.AspNetCore.Authorization
@model WebDesignerSystem.Pages.Admin.Categories.IndexModel

@{
    ViewData["Title"] = "Управление категориями";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <a asp-page="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Добавить категорию
        </a>
    </div>

    @if (Model.Categories.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Название</th>
                        <th>Описание</th>
                        <th>Кол-во товаров</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Categories)
                    {
                        var productCount = Model.Categories.IndexOf(category) + 1; // Для примера
                        
                        <tr>
                            <td>
                                <strong>@category.Name</strong>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(category.Description))
                                {
                                    <span class="text-muted">@category.Description</span>
                                }
                                else
                                {
                                    <span class="text-muted">Нет описания</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-secondary">@productCount</span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-page="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-page="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Статистика -->
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body text-center">
                        <h3>@Model.Categories.Count()</h3>
                        <p class="text-muted">Всего категорий</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>Категории не найдены</h4>
            <p>Добавьте первую категорию для товаров и услуг</p>
            <a asp-page="Create" class="btn btn-primary">Добавить категорию</a>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Подтверждение удаления
            const deleteButtons = document.querySelectorAll('a[href*="Delete"]');
            deleteButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    if (!confirm('Вы уверены, что хотите удалить эту категорию?\nПримечание: товары этой категории не будут удалены.')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
}