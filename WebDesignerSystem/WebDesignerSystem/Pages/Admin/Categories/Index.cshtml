@page
@attribute [Authorize(Roles = "Designer")]
@using Microsoft.AspNetCore.Authorization
@model WebDesignerSystem.Pages.Admin.Categories.IndexModel

@{
    ViewData["Title"] = "Категории";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="mb-2">Категории</h1>
            <p class="text-muted mb-0">Управление категориями товаров</p>
        </div>
        <a asp-page="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i> Добавить категорию
        </a>
    </div>

    @if (Model.Categories.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Название</th>
                        <th>Описание</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Categories)
                    {
                        <tr>
                            <td class="align-middle">
                                <strong>@category.Name</strong>
                            </td>
                            <td class="align-middle">
                                @if (!string.IsNullOrEmpty(category.Description))
                                {
                                    <span class="text-muted">@category.Description</span>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td class="align-middle">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-page="Edit" asp-route-id="@category.Id" class="btn btn-outline-primary" 
                                       title="Редактировать">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-page="Delete" asp-route-id="@category.Id" class="btn btn-outline-danger"
                                       title="Удалить">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Статистика -->
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="stat-card">
                    <h3>@Model.Categories.Count()</h3>
                    <p class="text-muted mb-0">Всего категорий</p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-tags display-1 text-muted"></i>
            </div>
            <h3 class="mb-3">Категории не найдены</h3>
            <p class="text-muted mb-4">Добавьте первую категорию для товаров и услуг</p>
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Добавить категорию
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Подтверждение удаления
            const deleteButtons = document.querySelectorAll('a[href*="Delete"]');
            deleteButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    if (!confirm('Вы уверены, что хотите удалить эту категорию?\nТовары этой категории не будут удалены.')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
}