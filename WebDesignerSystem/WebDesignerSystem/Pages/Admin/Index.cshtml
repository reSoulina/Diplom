@page
@attribute [Authorize(Roles = "Designer")]
@using Microsoft.AspNetCore.Authorization
@{
    ViewData["Title"] = "Панель администратора";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    
    <div class="row mt-4">
        <!-- Управление каталогом -->
        <div class="col-md-4 mb-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-box-seam" style="font-size: 3rem; color: #0d6efd;"></i>
                    <h4 class="card-title mt-3">Каталог товаров</h4>
                    <p class="card-text">Управление товарами и услугами</p>
                    <div class="d-grid gap-2">
                        <a asp-page="/Admin/Products/Index" class="btn btn-primary">Перейти</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Управление категориями -->
        <div class="col-md-4 mb-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-tags" style="font-size: 3rem; color: #fd7e14;"></i>
                    <h4 class="card-title mt-3">Категории</h4>
                    <p class="card-text">Управление категориями товаров</p>
                    <div class="d-grid gap-2">
                        <a asp-page="/Admin/Categories/Index" class="btn btn-warning">Перейти</a>
                    </div>
                </div>
            </div>
        </div>
        
       @*  <!-- Управление заказами -->
