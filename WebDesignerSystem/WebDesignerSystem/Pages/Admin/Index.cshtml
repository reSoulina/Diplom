@page
@attribute [Authorize(Roles = "Designer")]
@using Microsoft.AspNetCore.Authorization
@model WebDesignerSystem.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Панель администратора";
}

<div class="container">
    <div class="text-center mb-5">
        <h1 class="mb-3">Панель управления</h1>
        <p class="lead text-muted">Управление системой веб-дизайнера</p>
    </div>
    
    <div class="row justify-content-center">
        <!-- Управление каталогом -->
        <div class="col-md-5 mb-4">
            <div class="card text-center h-100">
                <div class="card-body p-5">
                    <div class="bg-primary bg-opacity-10 p-4 rounded-circle d-inline-flex mb-4">
                        <i class="bi bi-box-seam text-primary display-6"></i>
                    </div>
                    <h4 class="card-title mb-3">Товары и услуги</h4>
                    <p class="card-text mb-4 text-muted">Добавление, редактирование и удаление товаров и услуг</p>
                    <a asp-page="/Admin/Products/Index" class="btn btn-primary btn-lg px-4">
                        <i class="bi bi-box-seam me-2"></i>Управление
                    </a>
                </div>
            </div>
        </div>

        <!-- Управление категориями -->
        <div class="col-md-5 mb-4">
            <div class="card text-center h-100">
                <div class="card-body p-5">
                    <div class="bg-warning bg-opacity-10 p-4 rounded-circle d-inline-flex mb-4">
                        <i class="bi bi-tags text-warning display-6"></i>
                    </div>
                    <h4 class="card-title mb-3">Категории</h4>
                    <p class="card-text mb-4 text-muted">Создание и управление категориями товаров</p>
                    <a asp-page="/Admin/Categories/Index" class="btn btn-warning btn-lg px-4">
                        <i class="bi bi-tags me-2"></i>Управление
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-warning {
        background: #fd7e14;
        color: white;
        border-color: #fd7e14;
    }
    
    .btn-warning:hover {
        background: #e66a00;
        border-color: #e66a00;
        transform: translateY(-1px);
    }
</style>