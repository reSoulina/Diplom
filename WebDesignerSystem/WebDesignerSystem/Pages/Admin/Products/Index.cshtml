@page
@attribute [Authorize(Roles = "Designer")]
@using Microsoft.AspNetCore.Authorization
@model WebDesignerSystem.Pages.Admin.Products.IndexModel

@{
    ViewData["Title"] = "Товары и услуги";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="mb-2">Товары и услуги</h1>
            <p class="text-muted mb-0">Управление каталогом</p>
        </div>
        <a asp-page="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i> Добавить
        </a>
    </div>

    <!-- Фильтры -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Категория</label>
                    <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select">
                        <option value="">Все категории</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Тип</label>
                    <select asp-for="ProductType" class="form-select">
                        <option value="">Все</option>
                        <option value="product">Товары</option>
                        <option value="service">Услуги</option>
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Применить</button>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Products.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th style="width: 70px;">Фото</th>
                        <th>Название</th>
                        <th>Категория</th>
                        <th>Тип</th>
                        <th>Цена</th>
                        <th>Статус</th>
                        <th style="width: 100px;">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" alt="@product.Name" 
                                         style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;"
                                         onerror="this.src='data:image/svg+xml;base64,'">
                                }
                                else
                                {
                                    <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                                         style="width: 50px; height: 50px;">
                                        <i class="bi @(product.IsService ? "bi-calendar-check" : "bi-box-seam") text-muted"></i>
                                    </div>
                                }
                            </td>
                            <td class="align-middle">
                                <strong>@product.Name</strong>
                                @if (!string.IsNullOrEmpty(product.Description))
                                {
                                    <br>
                                    <small class="text-muted">@(product.Description.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description)</small>
                                }
                            </td>
                            <td class="align-middle">
                                @if (product.Category != null)
                                {
                                    <span class="badge bg-secondary">@product.Category.Name</span>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td class="align-middle">
                                <span class="badge @(product.IsService ? "bg-info" : "bg-success")">
                                    @(product.IsService ? "Услуга" : "Товар")
                                </span>
                            </td>
                            <td class="align-middle">
                                <strong>@product.Price.ToString("C")</strong>
                            </td>
                            <td class="align-middle">
                                @if (product.IsActive)
                                {
                                    <span class="badge bg-success">Активно</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Неактивно</span>
                                }
                            </td>
                            <td class="align-middle">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-page="Edit" asp-route-id="@product.Id" class="btn btn-outline-primary" 
                                       title="Редактировать">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-page="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger"
                                       title="Удалить">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Статистика -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="stat-card">
                    <h3>@Model.Products.Count()</h3>
                    <p class="text-muted mb-0">Всего</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <h3>@Model.Products.Count(p => !p.IsService)</h3>
                    <p class="text-muted mb-0">Товаров</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <h3>@Model.Products.Count(p => p.IsService)</h3>
                    <p class="text-muted mb-0">Услуг</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <h3>@Model.Products.Count(p => p.IsActive)</h3>
                    <p class="text-muted mb-0">Активных</p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-box display-1 text-muted"></i>
            </div>
            <h3 class="mb-3">Товары не найдены</h3>
            <p class="text-muted mb-4">Добавьте первый товар или измените параметры фильтрации</p>
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Добавить товар
            </a>
        </div>
    }
</div>