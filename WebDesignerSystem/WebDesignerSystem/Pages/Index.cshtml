@page
@model IndexModel
@{
    ViewData["Title"] = "Главная";
}

<div class="text-center">
    <h1 class="display-4">Информационная система веб-дизайнера</h1>
    
    <div class="row mt-5">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4>Добро пожаловать!</h4>
                </div>
                <div class="card-body">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <p class="lead">Для начала работы необходимо войти или зарегистрироваться</p>
                        <div class="d-grid gap-2 d-md-block">
                            <a asp-page="/Account/Login" class="btn btn-primary btn-lg me-2">Войти</a>
                            <a asp-page="/Account/Register" class="btn btn-outline-primary btn-lg">Регистрироваться как клиент</a>
                        </div>
                        
                        <div class="mt-4">
                            <h5>Тестовые аккаунты:</h5>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <div class="card">
                                        <div class="card-body">
                                            <h6>Дизайнер</h6>
                                            <p><strong>Email:</strong> designer@example.com</p>
                                            <p><strong>Пароль:</strong> Designer123!</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card">
                                        <div class="card-body">
                                            <h6>Клиент</h6>
                                            <p><strong>Email:</strong> client@example.com</p>
                                            <p><strong>Пароль:</strong> Client123!</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p class="lead">Добро пожаловать, @User.Identity.Name!</p>
                        
                        @if (User.IsInRole("Designer"))
                        {
                            <p>Вы вошли как <span class="badge bg-primary">Дизайнер</span></p>
                            <a asp-page="/Admin/Index" class="btn btn-primary">Перейти в панель администратора</a>
                        }
                        else if (User.IsInRole("Client"))
                        {
                            <p>Вы вошли как <span class="badge bg-success">Клиент</span></p>
                            <div class="d-grid gap-2 d-md-block">
                                <a asp-page="/Client/Index" class="btn btn-primary me-2">Каталог товаров</a>
                                <a asp-page="/Client/MyOrders" class="btn btn-outline-primary">Мои заказы</a>
                                <a asp-page="/Client/Services" class="btn btn-outline-primary">Запись на услуги</a>
                            </div>
                        }
                    }
                </div>
            </div>
            
            @if (!User.Identity.IsAuthenticated)
            {
                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5>Для клиентов</h5>
                            </div>
                            <div class="card-body">
                                <ul>
                                    <li>Просмотр товаров и услуг</li>
                                    <li>Добавление в корзину</li>
                                    <li>Оформление заказов</li>
                                    <li>Запись на консультации</li>
                                    <li>Отслеживание заказов</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5>Для дизайнеров</h5>
                            </div>
                            <div class="card-body">
                                <ul>
                                    <li>Управление товарами</li>
                                    <li>Просмотр заказов</li>
                                    <li>Управление статусами</li>
                                    <li>Календарь записей</li>
                                    <li>Статистика</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>